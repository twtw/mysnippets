# https://ithelp.ithome.com.tw/articles/10192204
snippet xhr.onload
	var xhr = new XMLHttpRequest();
	xhr.open("${1:GET}","${2:url}",${3:false});
	xhr.onlod() = function(){
		${4:code}
	};
	xhr.send(${5});
# https://www.w3schools.com/js/js_ajax_http_response.asp
snippet xhr
	var xhr = new XMLHttpRequest();
	xhr.onreadystatechange = function(){
		if (this.readyState == 4 && this.status == 200){
			${4:code}
		}
	};
	xhr.open("${1:GET}","${2:url}",${3:true});
	xhr.send(${5});
