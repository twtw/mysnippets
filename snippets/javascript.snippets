# DOM
# addEventListener
snippet ae
	${1:document}.addEventListener('${2:event}', ${3:function})
# appendChild
snippet ac
	${1:document}.appendChild(${2:elem})
# removeChild
snippet rc
	${1:document}.removeChild(${2:elem})
# createElement
# https://developer.mozilla.org/zh-TW/docs/Web/API/Document/createElement
snippet cel
	${1:document}.createElement(${2:elem},{${3:id}: "${4:value}"});
snippet vcel
	var ${1:ele_name} = ${2:document}.createElement(${3:elem},{${3:id}: "${4:value}"});
snippet vn
